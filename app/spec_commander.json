      "post": {
        "description": "",
        "parameters": [
          {
            "description": "The report's author-id",
            "in": "path",
            "name": "sub_id",
            "type": "string"
          },
          {
            "description": "A report to be accepted",
            "in": "body",
            "name": "report",
            "required": true,
